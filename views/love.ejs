    <script>

        function daysBetweenDates(date1, date2) {
            const d1 = new Date(date1.getFullYear(), date1.getMonth(), date1.getDate());
            const d2 = new Date(date2.getFullYear(), date2.getMonth(), date2.getDate());
            const oneDay = 24 * 60 * 60 * 1000; // milliseconds in one day
            return Math.round(Math.abs((d1 - d2) / oneDay));
        }


        function updateTime() {
            const timeDateDiv = document.querySelector('.time-date');
            const timeOne = document.querySelector('.time-one');
            const dateOne = document.querySelector('.date-one');

            // Get the current date and time
            const now = new Date();

            // Date since we start counting (1st October 2021)
            const startDate = new Date(2021, 9, 1);

            // Calculate number of days from start date to now
            const daysRunning = daysBetweenDates(now, startDate);

            // Convert the time to a formatted string (e.g., "12:34:56")
            const timeString = now.toLocaleTimeString();

            // Set the text content of the div to show days and the formatted time string
            timeOne.textContent = `${timeString}`;
            dateOne.textContent = `${daysRunning}`;
        }


        // Update the time immediately when the page loads
        updateTime();

        // Then update the time every second
        setInterval(updateTime, 1000);
        // Function to handle heart click
        function playAudioOnHeartClick() {
            const audioElement = document.getElementById('myAudio');
            if (audioElement.paused) {
                audioElement.play();
            } else {
                audioElement.pause();
            }
        }

        // Attach the function to the heart click event
        const heartElement = document.querySelector('.heart');
        heartElement.addEventListener('click', playAudioOnHeartClick);

    </script>

