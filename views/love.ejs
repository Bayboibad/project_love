        .time-one,
        .date-one {
            background-color: #565656;
            color: transparent;
            text-shadow: 5px 5px 6px rgba(255, 255, 255, 0.5);
            -webkit-background-clip: text;
            -moz-background-clip: text;
            background-clip: text;
        }

        .heart {
            cursor: pointer;
            position: relative;
            animation: heart 0.6s linear infinite;
        }

        @keyframes heart {
            0% {
                transform: rotate(0deg) scale(1.00);
            }

            80% {
                transform: rotate(0deg) scale(0.90);
            }

            100% {
                transform: rotate(0deg) scale(0.80);
            }
        }

        .heart::before {
            content: "";
            position: absolute;
            height: 200px;
            width: 200px;
            background: red;
            top: -55%;
            border-radius: 50px;
            box-shadow: -10px 10px 90px red;
        }

        .heart::after {
            content: "";
            position: absolute;
            height: 200px;
            width: 200px;
            background: red;
            right: -55%;
            border-radius: 50px;
            box-shadow: -10px 10px 90px red;
